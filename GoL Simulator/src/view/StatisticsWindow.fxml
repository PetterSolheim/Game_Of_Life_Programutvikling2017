<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.text.Text?>

<FlowPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StatisticsWindowController">    
    <children>
        <HBox fx:id="chartWrapper">
            <children>
                <LineChart fx:id="chart" title="Statistics">
                    <xAxis>
                        <NumberAxis fx:id="xAxis" label="Generation" side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Cells" side="LEFT" />
                    </yAxis>
                </LineChart>
            </children>
        </HBox>
        <VBox fx:id="dialogWrapper">
            <children>
                <Text text="Statistics"/>
                <HBox>
                    <children>
                        <Text text="Enter amount of generations: " />
                        <TextField fx:id="txtIterations" prefWidth="50" />
                        <Button fx:id="btnConfirm" onAction="#getStatistics">Confirm</Button>
                    </children>           
                </HBox>
            </children>
        </VBox>
    </children>
</FlowPane>
