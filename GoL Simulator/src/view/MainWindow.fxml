            <HBox alignment="CENTER_LEFT" spacing="10">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
                <children>
                    <Text text="Zoom: " />
                    <Slider fx:id="cellSizeSlider" majorTickUnit="1.0" max = "20.0" min ="1.0" minorTickCount="0" snapToTicks="true" value="7.0"/>
                    <Text text="Animation speed: " />
                    <Slider fx:id="fpsSlider" majorTickUnit="5.0" max="120.0" min="1.0" minorTickCount="0" snapToTicks="true" value="4.0" >
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin>
                    </Slider>                                 
                </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
                <children>
                    <Text>Current Generation: </Text>
                    <Text fx:id="txtShowGen" text="x">
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin>
                    </Text>
                    <Text>Living cells:</Text>
                    <Text fx:id="txtShowCellCount" text="x">
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin>
                    </Text>
                </children>
            </HBox>
        </HBox>
    </children>
</AnchorPane>
