<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>
<?import view.ResizableCanvas?>
<?import javafx.scene.image.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainWindowController" stylesheets="/css/main.css">
    <children>
        <VBox id="wrapper">
            <HBox id="topBar">
                <Button fx:id="Reset" text="Reset" onAction="#reset"/>
                <Button fx:id="Play" onAction="#play"/>
                <Button text="Stop"
                        onAction="#play"/>
                <Button text="Rules"
                        onAction="#showGameRulesWindow"/>
            </HBox>
            <ResizableCanvas fx:id="canvas" onMouseClicked="#clickedCell"/>
            <HBox id="botBar">
                <children>
                    <Slider fx:id="cellSize" valueChanging="#changeCellSize" />
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
