<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox id="root" prefHeight="400.0" prefWidth="600.0" spacing="5" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AudioSettingsWindowController">

    <children> 
        <Label text="Audio Settings">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <Text text="This is where you edit the audio settingsn, you can also play music within the application." />
        <Separator prefWidth="200.0" />
        <Label text="Music Player">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <Button fx:id="btnReset" onAction="#getAudioFile" text="Select Song to play"/>
        <HBox>
            <Button onAction="#resetSong" text="Play">
                <graphic>
                    <ImageView fitHeight="19.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../img/play.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnPlay" onAction="#togglePlayState" text="Play">
                <graphic>
                    <ImageView fx:id="imgPlayPause" fitHeight="19.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../img/play.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
        <Separator prefWidth="200.0" />
        <Label text="Miscellanous">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <VBox>
            <children>
                <Text text="Volume " />
                <Slider fx:id="volumeSlider" max = "100.0" min ="0.0" minorTickCount="0" snapToTicks="true" majorTickUnit="1.0" value="100.0"/>
            </children>
        </VBox>
        <Label text="Represent board with sound">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <CheckBox fx:id="generationAudio" mnemonicParsing="false" text="Audio after ech generation." />
        <CheckBox fx:id="cellAudio" mnemonicParsing="false" text="Audio for each cell state" />
        <Button fx:id="btnPlayBoardAudio" onAction="#playBoardAudio" text="Start"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
