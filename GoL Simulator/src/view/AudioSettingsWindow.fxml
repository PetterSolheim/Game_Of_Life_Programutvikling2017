<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Separator?>
<?import javafx.geometry.Insets?>

<VBox id="root" prefHeight="400.0" prefWidth="600.0" spacing="5" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AudioSettingsWindowController">

    <children> 
        <Label text="Audio Settings">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <Text text="This is where you edit the audio settingsn, you can also play music within the application." />
        <Separator prefWidth="200.0" />
        <Label text="Music Player">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <Button fx:id="btnReset" onAction="#loadAudioFile" text="Select Song to play"/>
        <Separator prefWidth="200.0" />
        <Label text="Miscellanous">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <HBox>
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
            <children>
                <Text text="Volume " />
                <Slider fx:id="volumeSlider" majorTickUnit="1.0" max="100.0" min="0" minorTickCount="1" snapToTicks="true"/>
            </children>
        </HBox>
    </children>
</VBox>
